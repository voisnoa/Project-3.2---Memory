/**
 * Memory of 4K 16-bit registers.
 * If load is asserted, the value of the register selected by
 * address is set to in; Otherwise, the value does not change.
 * The value of the selected register is emitted by out.
 */
CHIP RAM4K {
    IN in[16], load, address[12];
    OUT out[16];

    PARTS:
    DMux8Way(in=load, sel=address[9..11], a=dA, b=dB, c=dC, d=dD, e=dE, f=dF, g=dG, h=dH);

    RAM512(in=in, load=dA, address=address[0..8], out=memA);
    RAM512(in=in, load=dB, address=address[0..8], out=memB);
    RAM512(in=in, load=dC, address=address[0..8], out=memC);
    RAM512(in=in, load=dD, address=address[0..8], out=memD);
    RAM512(in=in, load=dE, address=address[0..8], out=memE);
    RAM512(in=in, load=dF, address=address[0..8], out=memF);
    RAM512(in=in, load=dG, address=address[0..8], out=memG);
    RAM512(in=in, load=dH, address=address[0..8], out=memH);

    Mux8Way16(a=memA, b=memB, c=memC, d=memD, e=memE, f=memF, g=memG, h=memH, sel=address[9..11], out=out);
}
